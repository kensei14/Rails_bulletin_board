<h1>Listing boards</h1>

<table>
  <tr>
    <th>User_Id</th>
    <th>Title</th>
    <th>Comment</th>
    <th>D date</th>
    <th>D time</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @boards.each do |board| %>
  <tr>
    <td><%# board.id %></td>
    <td><%= board.user_id %></td>
    <td><%= board.title %></td>
    <td><%= board.comment %></td>
    <td><%= board.d_date %></td>
    <td><%= board.d_time %></td>
    <td><%= link_to 'Show', board %></td>
    <td><%= link_to 'Edit', edit_board_path(board) %></td>
    <td><%= link_to 'Destroy', board, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= form_tag(:controller=>"boards", :action=>"create") do -%>
  <div class="user_wrapper">
    <h2>ユーザーID</h2>
    <%= text_field(:contribute, :user_id, :class=>"user_text", :size=>"60") %>
    <h2>投稿タイトル</h2>
    <%= text_field(:contribute, :title, :class=>"user_text", :size=>"60") %>
    <br/>
    <h2>投稿内容</h2>
    <%= text_area(:contribute, :comment, :class=>"user_area", :size=>"60x20") %>
    <br/>
    <%= submit_tag("送信", :confirm=>"Are you sure?", :size=>"50") %>
    <br/>
  </div>
<% end -%>

<%= link_to 'New Board', new_board_path %>
